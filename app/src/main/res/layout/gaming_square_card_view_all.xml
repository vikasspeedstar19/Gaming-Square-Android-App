<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#616161">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/exclusives"
            android:id="@+id/main_list_game_img"
            android:scaleType="fitXY"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/main_list_game_name"
                android:text="Sample Text"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="@color/main_list_text_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/main_list_game_publisher"
                android:maxLines="1"
                android:textColor="@color/main_list_text_color"
                android:text="Sample Text"
                />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_list_game_rating"
                app:srb_numberOfStars="5"
                app:srb_stepSize="0.5"
                app:srb_borderColor="#000"
                app:srb_fillColor="#ffffff"
                app:srb_isIndicator="true"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>